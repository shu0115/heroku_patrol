
<h1>New target</h1>

<%= form_for :target, url: { action: "create", id: @target.try(:id) } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_area :url, cols: "100", rows: "5" %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.create" ), 'data-disable-with' => t( "menu.create" ) %>
  </div>
<% end %>

<%= link_to t( "menu.list" ), action: "index" %>
