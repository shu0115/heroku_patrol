
<h1>Editing target</h1>

<%= form_for :target, url: { action: "update", id: @target.try(:id) } do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_area :url, cols: "100", rows: "5" %>
  </div>

  <div class="actions">
    <%= f.submit t( "menu.update" ), 'data-disable-with' => t( "menu.update" ) %>
  </div>
<% end %>


<%= link_to t( "menu.show" ), action: "show", id: @target.id %>
 | <%= link_to t( "menu.list" ), action: "index" %>
